<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="22mm"
        android:layout_height="22mm"
        android:layout_marginLeft="12mm"
        android:background="@color/transparent"
        app:srcCompat="@drawable/icon_arrowup_white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2mm"
        android:background="@drawable/shape_rect_round_white"
        android:orientation="vertical"
        android:paddingTop="8mm"
        android:paddingBottom="8mm">

        <TextView
            android:id="@+id/dialogsigninexit_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20mm"
            android:layout_marginTop="6mm"
            android:layout_marginRight="20mm"
            android:layout_marginBottom="6mm"
            android:gravity="center"
            android:singleLine="true"
            android:text="修改密码"
            android:textColor="@color/default_font_black"
            android:textSize="26sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_font_hint" />

        <TextView
            android:id="@+id/dialogsigninexit_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20mm"
            android:layout_marginTop="6mm"
            android:layout_marginRight="20mm"
            android:layout_marginBottom="6mm"
            android:gravity="center"
            android:singleLine="true"
            android:text="退出系统"
            android:textColor="@color/default_font_black"
            android:textSize="26sp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/twzx_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46sp"
        android:layout_marginLeft="110pt"
        android:layout_marginRight="110pt"
        android:layout_marginTop="46sp">

        <include
            android:id="@+id/spzxing_left"
            layout="@layout/layout_doctorinfo" />

        <LinearLayout
            android:id="@+id/spzxing_right_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/spzxing_left"
            android:background="@color/default_transwhite_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="16sp">

            <TextView
                android:id="@+id/spzxing_right_top_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/default_font_gray"
                android:textSize="22sp"
                tools:text="正在与医生咨询，此次通话将在0小时后结束" />


            <CheckBox
                android:id="@+id/spzxing_right_top_speaker"
                android:layout_width="44pt"
                android:layout_height="44sp"
                android:layout_marginLeft="12pt"
                android:layout_marginRight="12pt"
                android:background="@drawable/checkbox_speaker"
                android:button="@null"
                android:checked="true" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp"
                android:background="@color/default_font_hint" />

            <CheckBox
                android:id="@+id/spzxing_right_top_microphone"
                android:layout_width="44pt"
                android:layout_height="44sp"
                android:layout_marginLeft="12pt"
                android:layout_marginRight="12pt"
                android:background="@drawable/checkbox_microphone"
                android:button="@null"
                android:checked="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/spzxing_right_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/spzxing_right_top"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/spzxing_left"
            android:background="@color/default_transwhite_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="1000pt"
                android:layout_height="600sp"
                android:layout_gravity="center"
                android:layout_marginTop="-30sp">

                <com.netease.nimlib.sdk.avchat.model.AVChatSurfaceViewRenderer
                    android:id="@+id/spzxing_right_othervedio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"/>

                <com.netease.nimlib.sdk.avchat.model.AVChatSurfaceViewRenderer
                    android:id="@+id/spzxing_right_mevedio"
                    android:layout_width="280pt"
                    android:layout_height="170sp"
                    android:layout_alignBottom="@id/spzxing_right_othervedio"
                    android:layout_alignRight="@id/spzxing_right_othervedio"
                    android:background="@color/black"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/spzxing_right_bottom_ljstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="正在建立视频连接..."
                android:textColor="@color/default_font_gray"
                android:textSize="26sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
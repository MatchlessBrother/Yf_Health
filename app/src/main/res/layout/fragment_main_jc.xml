<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainjcfrag_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_gray"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/mainjcfrag_swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mainjcfrag_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadingEdgeLength="0mm"
                android:requiresFadingEdge="vertical"
                android:scrollbars="none" />
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="120mm"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mainjcfrag_recycler_conditions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fadingEdgeLength="0mm"
                    android:requiresFadingEdge="vertical" />

                <View
                    android:layout_width="1mm"
                    android:layout_height="match_parent"
                    android:background="@color/default_divide_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="26mm"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="20mm"
                    android:paddingRight="20mm">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="监测类型"
                        android:textColor="@color/default_font_gray"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/mainjcfrag_lx_all"
                        android:layout_width="match_parent"
                        android:layout_height="56mm"
                        android:layout_marginTop="12mm"
                        android:background="@drawable/shape_rect_round_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="20mm"
                        android:paddingRight="20mm">

                        <TextView
                            android:id="@+id/mainjcfrag_lx"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/default_font_black"
                            android:textSize="30sp"
                            tools:text="全部" />

                        <ImageView
                            android:layout_width="30mm"
                            android:layout_height="30mm"
                            android:layout_marginLeft="6mm"
                            android:contentDescription=""
                            android:scaleType="fitXY"
                            android:src="@mipmap/downicon" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30mm"
                        android:singleLine="true"
                        android:text="当前状态"
                        android:textColor="@color/default_font_gray"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/mainjcfrag_zt_all"
                        android:layout_width="match_parent"
                        android:layout_height="56mm"
                        android:layout_marginTop="12mm"
                        android:background="@drawable/shape_rect_round_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="20mm"
                        android:paddingRight="20mm">

                        <TextView
                            android:id="@+id/mainjcfrag_zt"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textColor="@color/default_font_black"
                            android:textSize="30sp"
                            tools:text="全部" />

                        <ImageView
                            android:layout_width="30mm"
                            android:layout_height="30mm"
                            android:layout_marginLeft="6mm"
                            android:contentDescription=""
                            android:scaleType="fitXY"
                            android:src="@mipmap/downicon" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30mm"
                        android:singleLine="true"
                        android:text="查看日期"
                        android:textColor="@color/default_font_gray"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:id="@+id/mainjcfrag_starttime_all"
                        android:layout_width="match_parent"
                        android:layout_height="56mm"
                        android:layout_marginTop="12mm"
                        android:background="@drawable/shape_rect_round_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="20mm"
                        android:paddingRight="20mm">

                        <TextView
                            android:id="@+id/mainjcfrag_starttime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="开始日期"
                            android:singleLine="true"
                            android:textColor="@color/default_font_black"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_width="30mm"
                            android:layout_height="30mm"
                            android:layout_marginLeft="6mm"
                            android:contentDescription=""
                            android:scaleType="fitXY"
                            android:src="@mipmap/downicon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainjcfrag_endtime_all"
                        android:layout_width="match_parent"
                        android:layout_height="56mm"
                        android:layout_marginTop="12mm"
                        android:background="@drawable/shape_rect_round_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="20mm"
                        android:paddingRight="20mm">

                        <TextView
                            android:id="@+id/mainjcfrag_endtime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="结束日期"
                            android:singleLine="true"
                            android:textColor="@color/default_font_black"
                            android:textSize="30sp" />

                        <ImageView
                            android:layout_width="30mm"
                            android:layout_height="30mm"
                            android:layout_marginLeft="6mm"
                            android:contentDescription=""
                            android:scaleType="fitXY"
                            android:src="@mipmap/downicon" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1mm"
                android:background="@color/default_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mainjcfrag_reset"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFF9F9F9"
                    android:gravity="center"
                    android:paddingBottom="30mm"
                    android:paddingTop="30mm"
                    android:singleLine="true"
                    android:text="重置"
                    android:textColor="@color/default_font_black"
                    android:textSize="32sp" />

                <Button
                    android:id="@+id/mainjcfrag_sure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingBottom="30mm"
                    android:paddingTop="30mm"
                    android:singleLine="true"
                    android:text="确定"
                    android:textColor="@color/white"
                    android:textSize="32sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
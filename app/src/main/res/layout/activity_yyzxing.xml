<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/twzx_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46sp"
        android:layout_marginLeft="110pt"
        android:layout_marginRight="110pt"
        android:layout_marginTop="46sp">

        <include
            android:id="@+id/yyzxing_left"
            layout="@layout/layout_doctorinfo" />

        <LinearLayout
            android:id="@+id/yyzxing_right_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/yyzxing_left"
            android:gravity="center_vertical"
            android:background="@color/default_transwhite_bg"
            android:orientation="horizontal"
            android:paddingBottom="16sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="16sp">

            <TextView
                android:id="@+id/yyzxing_right_top_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/default_font_gray"
                android:textSize="22sp"
                tools:text="正在与医生咨询，此次通话将在0小时后结束" />


            <CheckBox
                android:id="@+id/yyzxing_right_top_speaker"
                android:layout_width="60pt"
                android:layout_height="60sp"
                android:layout_marginLeft="12pt"
                android:layout_marginRight="12pt"
                android:background="@drawable/checkbox_speaker"
                android:button="@null"
                android:checked="false" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="8sp"
                android:background="@color/default_font_hint" />

            <CheckBox
                android:id="@+id/yyzxing_right_top_microphone"
                android:layout_width="60pt"
                android:layout_height="60sp"
                android:layout_marginLeft="12pt"
                android:layout_marginRight="12pt"
                android:background="@drawable/checkbox_microphone"
                android:button="@null"
                android:checked="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/yyzxing_right_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/yyzxing_right_top"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/yyzxing_left"
            android:background="@color/default_transwhite_bg"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ufhealth.integratedmachine.client.widget.RippleLayout
                android:id="@+id/yyzxing_right_bottom_ripplelayout"
                android:layout_width="300pt"
                android:layout_height="300sp"
                android:layout_gravity="center"
                android:layout_marginTop="-100sp"
                android:background="@color/transparent"
                android:gravity="center"
                app:rb_color="#CC0093DD"
                app:rb_delay="0"
                app:rb_duration="2000"
                app:rb_radius="70sp"
                app:rb_rippleAmount="1"
                app:rb_scale="2"
                app:rb_type="fillRipple">

                <LinearLayout
                    android:layout_width="200pt"
                    android:layout_height="200sp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/box_blue_y_solid"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="100pt"
                        android:layout_height="100sp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/yyzx_white" />

                </LinearLayout>
            </ufhealth.integratedmachine.client.widget.RippleLayout>

            <TextView
                android:id="@+id/yyzxing_right_bottom_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-20sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="48sp" />

            <TextView
                android:id="@+id/yyzxing_right_bottom_ljstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="正在建立语音连接..."
                android:textColor="@color/default_font_gray"
                android:textSize="26sp" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
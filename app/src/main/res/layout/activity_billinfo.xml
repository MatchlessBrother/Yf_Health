<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/twzx_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46sp"
        android:layout_marginLeft="110pt"
        android:layout_marginRight="110pt"
        android:layout_marginTop="46sp"
        android:background="@color/default_transwhite_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_transwhite_bg"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="30sp">

            <ImageView
                android:id="@+id/doctorbillinfo_img"
                android:layout_width="174pt"
                android:layout_height="174sp"
                android:layout_marginRight="12pt"
                android:scaleType="centerCrop"
                android:src="@mipmap/defaultheadimg" />

            <TextView
                android:id="@+id/doctorbillinfo_source"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/doctorbillinfo_img"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/doctorbillinfo_img"
                android:gravity="right|top"
                android:singleLine="true"
                android:textColor="@color/mainColor"
                android:textSize="22sp"
                android:visibility="visible"
                tools:text="来源：优服医疗团队" />

            <TextView
                android:id="@+id/doctorbillinfo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/doctorbillinfo_img"
                android:layout_marginRight="30pt"
                android:layout_toRightOf="@id/doctorbillinfo_img"
                android:singleLine="true"
                android:textColor="@color/default_font_black"
                android:textSize="32sp"
                tools:text="王大胆" />

            <TextView
                android:id="@+id/doctorbillinfo_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/doctorbillinfo_name"
                android:layout_marginRight="30pt"
                android:layout_toLeftOf="@id/doctorbillinfo_source"
                android:layout_toRightOf="@id/doctorbillinfo_name"
                android:singleLine="true"
                android:textColor="@color/default_font_gray"
                android:textSize="24sp"
                tools:text="主治医生" />

            <TextView
                android:id="@+id/doctorbillinfo_hospitalname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/doctorbillinfo_name"
                android:layout_below="@id/doctorbillinfo_name"
                android:layout_marginRight="30pt"
                android:layout_marginTop="12sp"
                android:singleLine="true"
                android:textColor="@color/default_font_gray"
                android:textSize="24sp"
                tools:text="甘孜州人民医院" />

            <TextView
                android:id="@+id/doctorbillinfo_departmentname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/doctorbillinfo_hospitalname"
                android:layout_marginRight="30pt"
                android:layout_toLeftOf="@id/doctorbillinfo_source"
                android:layout_toRightOf="@id/doctorbillinfo_hospitalname"
                android:singleLine="true"
                android:textColor="@color/default_font_gray"
                android:textSize="24sp"
                tools:text="急救科" />

            <TextView
                android:id="@+id/doctorbillinfo_specialize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/doctorbillinfo_name"
                android:layout_below="@id/doctorbillinfo_hospitalname"
                android:layout_marginRight="30pt"
                android:layout_marginTop="12sp"
                android:layout_toLeftOf="@id/doctorbillinfo_source"
                android:singleLine="true"
                android:textColor="@color/default_font_gray"
                android:textSize="24sp"
                tools:text="擅长：专治各种不服气" />

            <com.donkingliang.labels.LabelsView
                android:id="@+id/doctorbillinfo_labels"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/doctorbillinfo_img"
                android:layout_alignLeft="@id/doctorbillinfo_name"
                android:layout_below="@id/doctorbillinfo_specialize"
                android:layout_marginRight="30pt"
                android:layout_marginTop="12sp"
                android:layout_toLeftOf="@id/doctorbillinfo_source"
                android:visibility="visible"
                app:labelBackground="@drawable/box_yellow_zj_solid"
                app:labelTextColor="@color/white"
                app:labelTextPaddingBottom="6sp"
                app:labelTextPaddingLeft="6pt"
                app:labelTextPaddingRight="6pt"
                app:labelTextPaddingTop="6sp"
                app:labelTextSize="20sp"
                app:lineMargin="6sp"
                app:maxSelect="0"
                app:selectType="NONE"
                app:wordMargin="8pt" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/doctorbillinfo_img"
                android:layout_marginTop="30sp"
                android:background="@color/default_divide_line" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6pt"
                android:singleLine="true"
                android:text="服务内容："
                android:textColor="@color/default_font_gray"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/doctorbillinfo_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/default_font_black"
                android:textSize="28sp"
                tools:text="视频咨询" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="20sp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6pt"
                android:singleLine="true"
                android:text="服务价格："
                android:textColor="@color/default_font_gray"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/doctorbillinfo_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="28sp"
                tools:text="0元/分钟" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctorbillinfo_timeall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="20sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="20sp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6pt"
                android:singleLine="true"
                android:text="服务时长："
                android:textColor="@color/default_font_gray"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/doctorbillinfo_time_delbtn"
                android:layout_width="50pt"
                android:layout_height="50sp"
                android:layout_marginRight="12pt"
                android:background="@drawable/box_blue_zj_solid"
                android:gravity="center"
                android:text="一"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/doctorbillinfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="0分钟"
                android:textColor="@color/default_font_black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/doctorbillinfo_time_addbtn"
                android:layout_width="50pt"
                android:layout_height="50sp"
                android:layout_marginLeft="12pt"
                android:background="@drawable/box_blue_zj_solid"
                android:gravity="center"
                android:text="十"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="30sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt">

            <TextView
                android:id="@+id/doctorbillinfo_totalvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingBottom="20sp"
                android:paddingLeft="30pt"
                android:paddingRight="30pt"
                android:paddingTop="20sp"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="28sp"
                android:visibility="visible"
                tools:text="订单总价：0元" />

            <TextView
                android:id="@+id/doctorbillinfo_startpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_blue_yj_solid"
                android:gravity="center"
                android:paddingBottom="20sp"
                android:paddingLeft="30pt"
                android:paddingRight="30pt"
                android:paddingTop="20sp"
                android:singleLine="true"
                android:text="立即支付"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
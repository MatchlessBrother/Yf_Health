<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:gravity="center"
        android:singleLine="true"
        android:text="点击下方图片进行刷新！"
        android:textColor="@color/default_font_hint"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/recyclerview_refreshbtn"
        android:layout_width="288pt"
        android:layout_height="288sp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/nodataicon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:singleLine="true"
        android:text="没有数据可以显示哟！"
        android:textColor="@color/default_font_gray"
        android:textSize="50sp" />

</LinearLayout>
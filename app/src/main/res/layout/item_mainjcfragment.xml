<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainjcfrag_item_topbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12mm"
        android:layout_marginRight="12mm"
        android:layout_marginTop="12mm"
        android:background="@drawable/shape_rect_tltrround_brightorange_orange"
        android:orientation="vertical"
        android:paddingBottom="20mm"
        android:paddingLeft="12mm"
        android:paddingRight="12mm"
        android:paddingTop="20mm">

        <TextView
            android:id="@+id/mainjcfrag_item_qy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8mm"
            android:gravity="left"
            android:singleLine="true"
            android:text="区域 : 常减压装置"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mainjcfrag_item_dz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8mm"
            android:gravity="left"
            android:singleLine="true"
            android:text="地址 : 成品泵203北"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mainjcfrag_item_lsgj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8mm"
            android:gravity="left"
            android:singleLine="true"
            android:text="历史告警 : 0"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mainjcfrag_item_sjtx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8mm"
            android:gravity="left"
            android:singleLine="true"
            android:text="数据通讯 : 正常"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mainjcfrag_item_jcl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8mm"
            android:gravity="left"
            android:singleLine="true"
            android:text="检查类 : 可燃气体"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mainjcfrag_item_bjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8mm"
            android:gravity="left"
            android:singleLine="true"
            android:text="报警值 : ≥30vol%"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/mainjcfrag_item_yjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text="预警值 : ≥40vol%"
            android:textColor="@color/default_font_black"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainjcfrag_item_bottombg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12mm"
        android:layout_marginLeft="12mm"
        android:layout_marginRight="12mm"
        android:background="@drawable/shape_rect_blbrround_orange"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:paddingBottom="20mm"
        android:paddingLeft="12mm"
        android:paddingRight="12mm"
        android:paddingTop="20mm">

        <ImageView
            android:layout_width="30mm"
            android:layout_height="30mm"
            android:layout_marginRight="20mm"
            android:scaleType="fitXY"
            android:src="@mipmap/bj" />

        <TextView
            android:id="@+id/mainjcfrag_item_ssz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:singleLine="true"
            android:text="实时值 : 52 vol%"
            android:textColor="@color/white"
            android:textSize="23sp" />
    </LinearLayout>

    <View
        android:id="@+id/mainjcfrag_item_divideline"
        android:layout_width="match_parent"
        android:layout_height="20mm"
        android:background="#FFF2F2F2"/>

</LinearLayout>
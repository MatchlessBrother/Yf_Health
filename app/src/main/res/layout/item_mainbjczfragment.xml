<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20mm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20mm"
        android:layout_marginTop="20mm"
        android:layout_marginRight="20mm"
        android:background="@drawable/shape_rect_round_white"
        android:orientation="vertical"
        android:paddingLeft="20mm"
        android:paddingRight="20mm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20mm"
            android:layout_marginBottom="20mm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mainbjczfragment_time"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="报警时间 : 2018-10-18 20:19:18"
                android:textColor="@color/default_font_gray"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/item_mainbjczfragment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20mm"
                android:gravity="center_vertical|right"
                android:singleLine="true"
                android:text="未处置"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1mm"
            android:background="@color/default_divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20mm"
            android:layout_marginBottom="12mm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mainbjczfragment_oneline_left"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="部门 : 炼油运行一部"
                android:textColor="@color/default_font_black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/item_mainbjczfragment_oneline_right"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="设备 : 常减压装置"
                android:textColor="@color/default_font_black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12mm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mainbjczfragment_twoline_left"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="位置 : 成品泵403南"
                android:textColor="@color/default_font_black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/item_mainbjczfragment_twoline_right"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="类型 : 可燃气体"
                android:textColor="@color/default_font_black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20mm"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mainbjczfragment_threeline_left"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="报警值 : ≥40vol%"
                android:textColor="@color/default_font_black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/item_mainbjczfragment_threeline_right"
                android:layout_width="0mm"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="实时值 : ≥60vol%"
                android:textColor="@color/default_font_black"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_mainbjczfragment_cancel_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1mm"
                android:background="@color/default_divide_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20mm"
                android:paddingBottom="20mm">

                <TextView
                    android:id="@+id/item_mainbjczfragment_cancel"
                    android:layout_width="120mm"
                    android:layout_height="50mm"
                    android:layout_marginRight="30mm"
                    android:background="@drawable/shape_rect_round_yellow"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="误报"
                    android:textColor="@color/white"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/item_mainbjczfragment_process"
                    android:layout_width="120mm"
                    android:layout_height="50mm"
                    android:layout_marginLeft="30mm"
                    android:background="@drawable/shape_rect_round_blue"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="立即处置"
                    android:textColor="@color/white"
                    android:textSize="26sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
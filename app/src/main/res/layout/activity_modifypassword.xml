<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="18mm"
        android:paddingLeft="20mm"
        android:paddingRight="20mm"
        android:paddingTop="18mm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="原始密码：    "
            android:textColor="@color/default_font_black"
            android:textSize="33sp" />

        <EditText
            android:id="@+id/modifypassword_oldpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入原始密码"
            android:singleLine="true"
            android:textColor="@color/default_font_black"
            android:textColorHint="@color/default_font_hint"
            android:textSize="33sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2mm"
        android:background="@color/default_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="18mm"
        android:paddingLeft="20mm"
        android:paddingRight="20mm"
        android:paddingTop="18mm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="新密码：        "
            android:textColor="@color/default_font_black"
            android:textSize="33sp" />

        <EditText
            android:id="@+id/modifypassword_newpassword1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/default_font_black"
            android:textColorHint="@color/default_font_hint"
            android:textSize="33sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2mm"
        android:background="@color/default_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="18mm"
        android:paddingLeft="20mm"
        android:paddingRight="20mm"
        android:paddingTop="18mm">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="确认新密码："
            android:textColor="@color/default_font_black"
            android:textSize="33sp" />

        <EditText
            android:id="@+id/modifypassword_newpassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/default_font_black"
            android:textColorHint="@color/default_font_hint"
            android:textSize="33sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2mm"
        android:background="@color/default_divide_line" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88sp"
    android:background="@color/mainColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/activity_title_back"
        android:layout_width="38sp"
        android:layout_height="38sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:background="@mipmap/title_back"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <TextView
        android:id="@+id/activity_title_countdown"
        android:layout_width="160pt"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:text="0S"
        android:textColor="@color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/activity_title_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/mainColor"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="36sp"
        tools:text="标题" />

    <TextView
        android:layout_width="160pt"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/activity_title_more"
        android:layout_width="38sp"
        android:layout_height="38sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20pt"
        android:layout_marginRight="20pt"
        android:background="@mipmap/slide"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:visibility="invisible" />

</LinearLayout>
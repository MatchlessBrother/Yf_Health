<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120mm"
    android:layout_height="200mm"
    android:background="@color/default_font_gray">

    <TextView
        android:id="@+id/item_bjczdetailglsp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/item_bjczdetailglsp_img"
        android:layout_width="40mm"
        android:layout_height="40mm"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icon_startplay_white" />

</FrameLayout>
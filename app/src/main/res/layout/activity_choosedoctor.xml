<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/twzx_bg"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46sp"
        android:layout_marginLeft="110pt"
        android:layout_marginRight="110pt"
        android:layout_marginTop="46sp"
        android:background="#CCFFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:background="@color/mainColor"
            android:gravity="center_vertical"
            android:paddingLeft="30pt"
            android:paddingRight="30pt">

            <LinearLayout
                android:id="@+id/chosedoc_defaultsort_ll"
                android:layout_width="wrap_content"
                android:layout_height="58sp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chosedoc_defaultsort_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8pt"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="默认排序"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="26pt"
                    android:layout_height="26sp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/downwardarrowicon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chosedoc_source_ll"
                android:layout_width="wrap_content"
                android:layout_height="58sp"
                android:layout_marginRight="30pt"
                android:layout_toLeftOf="@id/chosedoc_defaultsort_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chosedoc_source_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8pt"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="来源"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="26pt"
                    android:layout_height="26sp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/downwardarrowicon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chosedoc_department_ll"
                android:layout_width="wrap_content"
                android:layout_height="58sp"
                android:layout_marginRight="30pt"
                android:layout_toLeftOf="@id/chosedoc_source_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chosedoc_department_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8pt"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="科室"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="26pt"
                    android:layout_height="26sp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/downwardarrowicon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chosedoc_hospital_ll"
                android:layout_width="wrap_content"
                android:layout_height="58sp"
                android:layout_marginRight="30pt"
                android:layout_toLeftOf="@id/chosedoc_department_ll"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chosedoc_hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8pt"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="医院"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

                <ImageView
                    android:layout_width="26pt"
                    android:layout_height="26sp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/downwardarrowicon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chosedoc_search_all"
                android:layout_width="match_parent"
                android:layout_height="58sp"
                android:layout_toLeftOf="@id/chosedoc_hospital_ll"
                android:layout_marginRight="30pt"
                android:background="@drawable/box_white_yj_solide"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="44pt"
                    android:layout_height="44sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20pt"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/searchicon" />

                <EditText
                    android:id="@+id/chosedoc_search_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16pt"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="搜索音声、科室、症状、医院、疾病"
                    android:singleLine="true"
                    android:textColor="@color/default_font_black"
                    android:textColorHint="@color/default_font_hint"
                    android:textSize="24sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="8pt"
                    android:layout_marginRight="8pt"
                    android:layout_marginTop="20sp"
                    android:background="@color/default_font_hint" />

                <Button
                    android:id="@+id/chosedoc_search_btn"
                    android:layout_width="120pt"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20pt"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="搜索"
                    android:textColor="@color/default_font_gray"
                    android:textSize="24sp" />
            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chosedoc_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
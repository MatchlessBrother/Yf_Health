<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/twzx_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46sp"
        android:layout_marginLeft="110pt"
        android:layout_marginRight="110pt"
        android:layout_marginTop="46sp"
        android:background="@color/default_transwhite_bg"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/bill_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="30sp">

            <TextView
                android:id="@+id/bill_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="共选择2个医生，订单总价：70元"
                android:textColor="@color/default_font_black"
                android:textSize="28sp" />

            <Button
                android:id="@+id/bill_btn"
                android:layout_width="290pt"
                android:layout_height="80sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_blue_yj_solid"
                android:gravity="center"
                android:visibility="gone"
                android:singleLine="true"
                android:text="提交问题"
                android:textColor="@color/white"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
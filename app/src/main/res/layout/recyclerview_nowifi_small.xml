<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:singleLine="true"
        android:text="点击下方图片进行重试！"
        android:textColor="@color/default_font_hint"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/recyclerview_refreshbtn"
        android:layout_width="144pt"
        android:layout_height="144sp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@mipmap/nowifiicon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:singleLine="true"
        android:text="网络发生异常了哟！"
        android:textColor="@color/default_font_gray"
        android:textSize="36sp" />

</LinearLayout>
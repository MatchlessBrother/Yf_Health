<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_transwhite_bg"
    android:paddingLeft="30pt"
    android:paddingRight="30pt"
    android:paddingTop="30sp">

    <ImageView
        android:id="@+id/doctorinfo_img"
        android:layout_width="174pt"
        android:layout_height="174sp"
        android:layout_marginRight="12pt"
        android:scaleType="centerCrop"
        android:src="@mipmap/defaultheadimg" />

    <LinearLayout
        android:id="@+id/doctorinfo_valuedetail_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/doctorinfo_valuedetail_twzx_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50pt"
                android:layout_height="50sp"
                android:paddingTop="12sp"
                android:scaleType="fitCenter"
                android:src="@mipmap/kszx_gray" />

            <TextView
                android:id="@+id/doctorinfo_valuedetail_twzx"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginRight="18pt"
                android:gravity="center"
                android:singleLine="true"
                android:text="25元/次"
                android:textColor="@color/red"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctorinfo_valuedetail_yyzx_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40pt"
                android:layout_height="40sp"
                android:scaleType="fitCenter"
                android:src="@mipmap/yyzx_gray" />

            <TextView
                android:id="@+id/doctorinfo_valuedetail_yyzx"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_marginRight="18pt"
                android:gravity="center"
                android:singleLine="true"
                android:text="25元/分钟"
                android:textColor="@color/red"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/doctorinfo_valuedetail_spzx_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40pt"
                android:layout_height="40sp"
                android:scaleType="fitCenter"
                android:src="@mipmap/spzx_gray" />

            <TextView
                android:id="@+id/doctorinfo_valuedetail_spzx"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="25元/分钟"
                android:textColor="@color/red"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/doctorinfo_source"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/doctorinfo_valuedetail_all"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/doctorinfo_img"
        android:singleLine="true"
        android:text="来源：优服医疗团队"
        android:textColor="@color/mainColor"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/doctorinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/doctorinfo_img"
        android:layout_marginRight="30pt"
        android:layout_toRightOf="@id/doctorinfo_img"
        android:singleLine="true"
        android:text="王大胆"
        android:textColor="@color/default_font_black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/doctorinfo_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/doctorinfo_name"
        android:layout_marginRight="30pt"
        android:layout_toLeftOf="@id/doctorinfo_source"
        android:layout_toRightOf="@id/doctorinfo_name"
        android:singleLine="true"
        android:text="主治医生"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_hospitalname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/doctorinfo_name"
        android:layout_below="@id/doctorinfo_name"
        android:layout_marginRight="30pt"
        android:layout_marginTop="12sp"
        android:singleLine="true"
        android:text="甘孜州人民医院"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_departmentname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/doctorinfo_hospitalname"
        android:layout_marginRight="30pt"
        android:layout_toLeftOf="@id/doctorinfo_source"
        android:layout_toRightOf="@id/doctorinfo_hospitalname"
        android:singleLine="true"
        android:text="急救科"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_specialize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/doctorinfo_name"
        android:layout_below="@id/doctorinfo_hospitalname"
        android:layout_marginRight="30pt"
        android:layout_marginTop="12sp"
        android:layout_toLeftOf="@id/doctorinfo_source"
        android:singleLine="true"
        android:text="擅长：专治各种不服气"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/doctorinfo_labels_allinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_alignLeft="@id/doctorinfo_name"
        android:layout_below="@id/doctorinfo_specialize"
        android:layout_marginRight="30pt"
        android:layout_marginTop="12sp"
        android:layout_toLeftOf="@id/doctorinfo_valuedetail_all"
        app:labelBackground="@drawable/box_yellow_zj_solid"
        app:labelTextColor="@color/white"
        app:labelTextPaddingBottom="6sp"
        app:labelTextPaddingLeft="6pt"
        app:labelTextPaddingRight="6pt"
        app:labelTextPaddingTop="6sp"
        app:labelTextSize="20sp"
        app:lineMargin="6sp"
        app:maxSelect="0"
        app:selectType="NONE"
        app:wordMargin="8pt" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/doctorinfo_img"
        android:layout_marginTop="30sp"
        android:background="@color/default_divide_line" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_transwhite_bg"
    android:paddingBottom="30sp"
    android:paddingLeft="30pt"
    android:paddingRight="30pt"
    android:paddingTop="30sp">

    <ImageView
        android:id="@+id/doctorinfo_img"
        android:layout_width="174pt"
        android:layout_height="174sp"
        android:layout_marginRight="12pt"
        android:scaleType="centerCrop"
        android:src="@mipmap/defaultheadimg" />

    <TextView
        android:id="@+id/doctorinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/doctorinfo_img"
        android:layout_marginRight="60pt"
        android:layout_toRightOf="@id/doctorinfo_img"
        android:singleLine="true"
        android:text="王大胆"
        android:textColor="@color/default_font_black"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/doctorinfo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/doctorinfo_name"
        android:layout_toRightOf="@id/doctorinfo_name"
        android:singleLine="true"
        android:text="主治医生"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_hospitalname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/doctorinfo_name"
        android:layout_below="@id/doctorinfo_name"
        android:layout_marginRight="60pt"
        android:layout_marginTop="12sp"
        android:singleLine="true"
        android:text="甘孜州人民医院"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_departmentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/doctorinfo_hospitalname"
        android:layout_toRightOf="@id/doctorinfo_hospitalname"
        android:singleLine="true"
        android:text="急救科"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_specialize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/doctorinfo_name"
        android:layout_below="@id/doctorinfo_hospitalname"
        android:layout_marginTop="12sp"
        android:singleLine="true"
        android:text="擅长：专治各种不服气"
        android:textColor="@color/default_font_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/doctorinfo_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/doctorinfo_img"
        android:singleLine="true"
        android:text="来源：优服医疗团队"
        android:textColor="@color/mainColor"
        android:textSize="22sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/doctorinfo_fy_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/doctorinfo_ljzx"
        android:layout_alignLeft="@id/doctorinfo_ljzx"
        android:layout_alignRight="@id/doctorinfo_ljzx"
        android:layout_below="@id/doctorinfo_source"
        android:gravity="center"
        android:singleLine="true"
        android:text="¥66 / 分钟"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/doctorinfo_fy_cb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/doctorinfo_img"
        android:button="@null"
        android:drawableRight="@drawable/checkbox_blue_no"
        android:gravity="center"
        android:singleLine="true"
        android:text="¥66/分钟"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/doctorinfo_ljzx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_blue_yj_solid"
        android:gravity="center"
        android:paddingBottom="12sp"
        android:paddingLeft="25pt"
        android:paddingRight="25pt"
        android:paddingTop="12sp"
        android:singleLine="true"
        android:text="立即咨询"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/doctorinfo_fyall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="40pt"
            android:layout_height="40sp"
            android:scaleType="fitCenter"
            android:src="@mipmap/kszx_gray" />

        <TextView
            android:id="@+id/doctorinfo_fyall_twjg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12pt"
            android:gravity="center"
            android:singleLine="true"
            android:text="25元/分钟"
            android:textColor="@color/red"
            android:textSize="28sp" />

        <ImageView
            android:layout_width="40pt"
            android:layout_height="40sp"
            android:scaleType="fitCenter"
            android:src="@mipmap/yyzx_gray" />

        <TextView
            android:id="@+id/doctorinfo_fyall_yyjg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="12pt"
            android:gravity="center"
            android:singleLine="true"
            android:text="25元/分钟"
            android:textColor="@color/red"
            android:textSize="28sp" />

        <ImageView
            android:layout_width="40pt"
            android:layout_height="40sp"
            android:scaleType="fitCenter"
            android:src="@mipmap/spzx_gray" />

        <TextView
            android:id="@+id/doctorinfo_fyall_spjg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:text="25元/分钟"
            android:textColor="@color/red"
            android:textSize="28sp" />
    </LinearLayout>

    <com.donkingliang.labels.LabelsView
        android:id="@+id/doctorinfo_labels_fyall"
        android:layout_width="wrap_content"
        android:layout_height="38sp"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_marginRight="30pt"
        android:layout_toLeftOf="@id/doctorinfo_fyall"
        android:layout_toRightOf="@id/doctorinfo_img"
        android:visibility="visible"
        app:labelBackground="@drawable/box_yellow_zj_solid"
        app:labelTextColor="@color/white"
        app:labelTextPaddingBottom="6sp"
        app:labelTextPaddingLeft="6pt"
        app:labelTextPaddingRight="6pt"
        app:labelTextPaddingTop="6sp"
        app:labelTextSize="20sp"
        app:lineMargin="6sp"
        app:maxSelect="0"
        app:selectType="NONE"
        app:wordMargin="8pt" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/doctorinfo_labels_btn"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_marginRight="30pt"
        android:layout_toLeftOf="@id/doctorinfo_ljzx"
        android:layout_toRightOf="@id/doctorinfo_img"
        android:visibility="gone"
        app:labelBackground="@drawable/box_yellow_zj_solid"
        app:labelTextColor="@color/white"
        app:labelTextPaddingBottom="6sp"
        app:labelTextPaddingLeft="6pt"
        app:labelTextPaddingRight="6pt"
        app:labelTextPaddingTop="6sp"
        app:labelTextSize="20sp"
        app:lineMargin="6sp"
        app:maxSelect="0"
        app:selectType="NONE"
        app:wordMargin="8pt" />

    <com.donkingliang.labels.LabelsView
        android:id="@+id/doctorinfo_labels_checkbox"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:layout_alignBottom="@id/doctorinfo_img"
        android:layout_marginRight="30pt"
        android:layout_toLeftOf="@id/doctorinfo_fy_cb"
        android:layout_toRightOf="@id/doctorinfo_img"
        android:visibility="gone"
        app:labelBackground="@drawable/box_yellow_zj_solid"
        app:labelTextColor="@color/white"
        app:labelTextPaddingBottom="6sp"
        app:labelTextPaddingLeft="6pt"
        app:labelTextPaddingRight="6pt"
        app:labelTextPaddingTop="6sp"
        app:labelTextSize="20sp"
        app:lineMargin="6sp"
        app:maxSelect="0"
        app:selectType="NONE"
        app:wordMargin="8pt" />

</RelativeLayout>
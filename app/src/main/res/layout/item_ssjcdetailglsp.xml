<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="190mm"
    android:layout_height="140mm"
    android:layout_marginLeft="12mm"
    android:layout_marginRight="12mm"
    android:background="@color/default_font_gray">

    <TextView
        android:id="@+id/item_ssjcdetailglsp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/default_font_hint"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/item_ssjcdetailglsp_img"
        android:layout_width="90mm"
        android:layout_height="90mm"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/icon_startplay_white" />

</FrameLayout>
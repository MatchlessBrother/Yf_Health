<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/twzx_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="46sp"
        android:layout_marginLeft="110pt"
        android:layout_marginRight="110pt"
        android:layout_marginTop="46sp">

        <include
            android:id="@+id/twzxing_left"
            layout="@layout/layout_doctorinfo" />

        <TextView
            android:id="@+id/twzxing_right_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/twzxing_left"
            android:background="@color/default_transwhite_bg"
            android:gravity="center_vertical"
            android:paddingBottom="30sp"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:paddingTop="30sp"
            android:text="正在与吴克医生咨询，此次咨询将在12小时后结束"
            android:textColor="@color/default_font_gray"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/twzxing_right_bottom_all"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/twzxing_left"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:id="@+id/twzxing_right_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFBBBBBB" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/twzxing_right_bottom_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="请输入问题与医生交互"
                    android:paddingLeft="30pt"
                    android:paddingRight="30pt"
                    android:textColor="@color/default_font_black"
                    android:textSize="24sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#FFBBBBBB" />

                <LinearLayout
                    android:layout_width="180pt"
                    android:layout_height="80sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/twzxing_right_bottom_expression"
                        android:layout_width="44pt"
                        android:layout_height="44sp"
                        android:paddingRight="20pt"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/expressionicon" />

                    <ImageView
                        android:id="@+id/twzxing_right_bottom_picture"
                        android:layout_width="44pt"
                        android:layout_height="44sp"
                        android:paddingLeft="20pt"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/defaultimageicon" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/twzxing_right_bottom_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/twzxing_right_bottom_all"
            android:layout_below="@id/twzxing_right_top"
            android:layout_marginLeft="30pt"
            android:layout_toRightOf="@id/twzxing_left"
            android:background="@color/default_transwhite_bg"
            android:paddingLeft="30pt"
            android:paddingRight="30pt" />
    </RelativeLayout>
</LinearLayout>
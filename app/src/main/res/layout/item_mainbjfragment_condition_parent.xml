<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_mainbjfragment_condition_parent_all"
    android:layout_width="match_parent"
    android:layout_height="90mm"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_mainbjfragment_condition_parent_tv"
        android:layout_width="0mm"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:paddingLeft="20mm"
        android:paddingRight="8mm"
        android:singleLine="true"
        android:textColor="@color/default_font_black"
        android:textSize="34sp"
        tools:text="厂区一" />

    <LinearLayout
        android:id="@+id/item_mainbjfragment_condition_parent_imgall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30mm"
        android:visibility="visible">

        <ImageView
            android:id="@+id/item_mainbjfragment_condition_parent_img"
            android:layout_width="50mm"
            android:layout_height="50mm"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_arrowright_blue" />
    </LinearLayout>
</LinearLayout>
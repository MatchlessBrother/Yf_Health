<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="25sp"
    android:paddingLeft="30pt"
    android:paddingRight="30pt"
    android:paddingTop="25sp">

    <TextView
        android:id="@+id/twzxing_accepttextmsg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FF999999"
        android:textSize="20sp"
        tools:text="2018/05/04  02:11:00" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/twzxing_accepttextmsg_img"
            android:layout_width="100pt"
            android:layout_height="100sp"
            android:layout_marginRight="8pt"
            android:scaleType="centerCrop"
            android:src="@mipmap/defaultheadimg"
            app:civ_border_color="#FFFFFFFF"
            app:civ_border_width="2pt" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/twzxing_textwhitebox"
            android:orientation="vertical"
            android:layout_marginTop="2sp"
            android:paddingBottom="20sp"
            android:paddingTop="20sp"
            android:paddingLeft="35pt"
            android:paddingRight="22pt">

            <TextView
                android:id="@+id/twzxing_accepttextmsg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="700pt"
                android:textColor="#FF333333"
                android:textSize="20sp"
                tools:text="吴医生您好，生您好，吴医" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="12sp"
                android:layout_marginTop="12sp"
                android:background="@color/default_divide_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="郑重提示：线上咨询不能代替面诊，医生建议仅供参考！"
                android:textColor="#FF999999"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
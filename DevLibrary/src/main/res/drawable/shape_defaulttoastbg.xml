<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角矩形默认背景颜色 -->
    <solid android:color="#BB000000"/>

    <!-- 圆角矩形四个顶角的度数-->
    <corners android:radius="3dp"/>

    <!-- padding属性:View里面的文字与View边界的间隔 -->
    <padding
        android:bottom="6dp"
        android:left="16dp"
        android:right="16dp"
        android:top="6dp"/>
</shape>